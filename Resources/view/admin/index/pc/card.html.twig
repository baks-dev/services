{# @var item \BaksDev\Services\Repository\AllServices\AllServicesResult #}

{% trans_default_domain('service.admin') %}

<tr class="vertical-middle" id="{{ item.id }}">
    <td class="text-nowrap">
        {# Пользовательское меню #}
        {{ include(_self|replace({ "card.html.twig": "_usecase.html.twig" })) }}
    </td>

    {# Заголовок услуги #}
    <td style="min-width: 350px;">
        <a class="btn btn-sm btn-link text-decoration-none modal-link disabled"
           href="{{ path('services:admin.newedit.edit', {id: item.id }) }}"
           data-bs-toggle="modal"
           data-bs-target="#modal">
            <span class="d-inline-block text-truncate text-primary align-middle" style="max-width: 350px;">
                {{ item.name }}
            </span>

        </a>
    </td>

    {# Описание услуги #}
    <td class="w-100">
        <span class="d-inline-block text-truncate align-middle"
              style="max-width: 600px;">
            {{ item.preview|striptags }}
        </span>
    </td>

    {# Цена #}
    <td class="w-100">
        <span class="d-inline-block text-truncate align-middle"
              style="max-width: 600px;">
            {{ money(item.price, item.currency) }}
        </span>
    </td>

    {# Услуга - календарь #}
    <td class="w-100 text-center">
        <a class="btn btn-sm btn-link text-decoration-none"
           href="{{ path('services:admin.service', { id: item.id }) }}"
           target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-calendar"
                 viewBox="0 0 16 16">
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
            </svg>
        </a>
    </td>

</tr>