{{ form_row(form.info.name, { label: 'Название' }) }}

{{ form_row(form.info.preview, { label: 'Описание услуги' }) }}

<div class="d-flex gap-2 justify-content-between align-items-baseline">

    <div class="w-50">

        {{ form_row(form.price.price, {
            label: 'Стоимость услуги',
        }) }}

    </div>

    <div class="w-50">
        {{ form_row(form.price.currency, {
            label: 'Валюта',
            attr: { 'data-select' : 'select2', class: 'nice-select mb-0'},
        }) }}
    </div>

</div>

{# Периоды #}

<div class="card-header border-light bg-body">
    <div class="card-title">
        <h4>
            Периоды
        </h4>
    </div>
</div>

<div class="card w-100 border-light">
    <div class="card-body pb-0" id="collection-period">

        <div class="d-flex justify-content-between gap-3 mb-3">
            <div class="w-25">&nbsp;</div>
            <div class="w-100">Время от</div>
            <div class="w-100">Время до</div>
        </div>
        {% for period_count, form in form.period %}
            <div class='mb-3 item-service' id='item_{{ form.vars.id }}'>
                {{ include(_self|replace({ "form.html.twig": "/period/_period.html.twig" })) }}
            </div>
        {% endfor %}
    </div>
</div>

<div class="card-footer border-light bg-body d-flex justify-content-between align-items-center">
    <button
            type="button"
            id="periodAddCollection"
            class="btn btn-sm btn-outline-primary border-0 period-add-collection"
            data-prototype="{{ include(_self|replace({ "form.html.twig": "period/_period.prototype.html.twig" }))|e('html_attr') }}"

            data-collection="{{ form.period.vars.id }}-collection"
            data-index="{{ form.period.count }}"
            data-period="{{ form.period.vars.name }}"
    >

                    <span class="svg-icon svg-icon-2">
							<svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none">
								<rect opacity="0.5"
                                      x="11"
                                      y="18"
                                      width="12"
                                      height="2"
                                      rx="1"
                                      transform="rotate(-90 11 18)"
                                      fill="currentColor">
							</rect>
								<rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
							</svg>
						</span>
        Добавить еще диапазон
    </button>
</div>